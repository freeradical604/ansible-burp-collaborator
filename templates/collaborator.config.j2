{
  "serverDomain" : "{{ burp_server_domain }}",
  "workerThreads" : 10,

  "eventCapture": {
      "localAddress" : "{{ burp_local_address }}",
      "publicAddress" : "{{ burp_public_address }}",

      "http": {
         "port" : {{ burp_http_port }}
       },
      "smtp": {
            "ports": [{{ burp_smtp_port1 }}, {{ burp_smtp_port2 }}]
        },
      "smtps": {
            "ports": {{ burp_smtps_port }}
        },

      "ssl": {
            "certificateFiles" : [
            "/etc/burp/burp.pk8",
            "/etc/burp/burp.crt",
            "/etc/burp/intermediate.crt"
          ]
        },
      "https": {
          "port" : {{ burp_https_port }}
      }
  },
"polling": {
      "http": {
      "localAddress" : "{{ burp_local_address }}",
      "publicAddress" : "{{ burp_public_address }}",
            "port": {{ burp_http_polling_port }}
        },
        "https": {
            "port": {{ burp_https_polling_port }}
        },
        "ssl": {
            "certificateFiles": [
            "/etc/burp/burp.pk8",
            "/etc/burp/burp.crt",
            "/etc/burp/intermediate.crt"
          ]

        }
    },
  "metrics": {
      "path" : "{{ burp_metrics_path }}",
      "addressWhitelist" : {{ burp_whitelist }}
  },

  "dns": {
      "interfaces" : [{
        "name":"ns",
	"localAddress" : "{{ burp_local_address }}",
	"publicAddress" : "{{ burp_public_address }}"
      }],
      "port" : {{ burp_dns_port }}
  },
"logLevel": "DEBUG",
    "customHttpContent": [
        {
            "path": "/",
            "contentType": "text/html",
            "base64Content": ""
        },
        {
            "path": "/info/readme.txt",
            "contentType": "text/plain",
            "base64Content": "VGhpcyBpcyB0aGUgcmVhZG1lIGZpbGUgZm9yIG15IGNvbGxhYm9yYXRvciBzZXJ2ZXIu"
        }
    ]
}
